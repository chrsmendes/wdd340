<% if (title) { %>
<h1><%= title %></h1>
<% } else {res.redirect('/')} %>

<div class="add-review-container">
  <h2>Leave a Review for <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>

  <form action="/inv/review" method="post" class="review-form">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div class="form-group">
      <label for="review_rating">Rating (1-5 stars):</label>
      <select id="review_rating" name="review_rating" required>
        <option value="">Select a rating</option>
        <option value="1" <% if(review_rating == "1"){%>selected<%}%>>★ (1 star)</option>
        <option value="2" <% if(review_rating == "2"){%>selected<%}%>>★★ (2 stars)</option>
        <option value="3" <% if(review_rating == "3"){%>selected<%}%>>★★★ (3 stars)</option>
        <option value="4" <% if(review_rating == "4"){%>selected<%}%>>★★★★ (4 stars)</option>
        <option value="5" <% if(review_rating == "5"){%>selected<%}%>>★★★★★ (5 stars)</option>
      </select>
    </div>
    
    <div class="form-group">
      <label for="review_text">Your Review:</label>
      <textarea id="review_text" name="review_text" rows="5" cols="50" placeholder="Share your thoughts about this vehicle..." required><%= review_text %></textarea>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit Review</button>
      <a href="/inv/detail/<%= inv_id %>" class="btn btn-secondary">Cancel</a>
    </div>
  </form>
</div>