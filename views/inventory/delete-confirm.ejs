<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<div class="card">
  <form action="/inv/delete" method="post">
    <div class="form-row">
      <div class="form-group">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" class="form-control" value="<%= locals.inv_make || '' %>" readonly>
      </div>
      <div class="form-group">
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" class="form-control" value="<%= locals.inv_model || '' %>" readonly>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" class="form-control" value="<%= locals.inv_year || '' %>" readonly>
      </div>
      <div class="form-group">
        <label for="inv_price">Price</label>
        <input type="number" id="inv_price" name="inv_price" class="form-control" value="<%= locals.inv_price || '' %>" readonly>
      </div>
    </div>

    <div class="form-group mt-1">
      <button class="btn btn-secondary" type="submit">Delete Vehicle</button>
      <a href="/inv" class="btn btn-error">Cancel</a>
    </div>

    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
  </form>
</div>